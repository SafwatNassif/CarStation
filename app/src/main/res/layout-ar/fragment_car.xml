<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.safwat.carstation.Fragment.CarFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/carback"
        android:scaleType="centerCrop"
        android:alpha="0.8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/car_name_part"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|end"
        android:weightSum="1"
        android:background="@color/item_back"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="@color/colorPrimary"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".98"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight=".3"
                android:text="@string/car_name"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:id="@+id/car_name_text"
                android:background="#5fff"
                android:layout_marginLeft="16dp"
                android:gravity="right"
                android:textSize="20dp"
                android:textColor="#8000"
                 />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/save_new_car"
        android:orientation="horizontal"
        android:background="@drawable/ripple_wrap_button"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="@string/save"
            android:textSize="28dp"
            android:padding="4dp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <!--need to  insert scroll view  and strech the listview-->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cars_RecycleViewList"
        android:layout_below="@+id/car_name_part"
        android:layout_above="@+id/save_new_car"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:scrollbars="vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/carProgressContainer"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/carProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>