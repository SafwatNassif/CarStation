<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="right"
        android:layout_marginTop="8dp"
        android:padding="0dp"
        android:id="@+id/single_details_item"
        swipe:leftEdgeSwipeOffset="2dp"
        android:background="#2ccc"
        >
        <!--image of delete and edit-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@android:drawable/ic_menu_delete"
                android:id="@+id/delete_in_details_daily"
                android:background="#2fff"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit"
                android:id="@+id/edit_in_details_daily"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#2fff"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        <!--container of information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:padding="0dp"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight="0.018"
                android:background="@color/colorPrimary"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_weight=".980"
                android:padding="0dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:id="@+id/required_data_container"
                    android:orientation="vertical"
                    android:weightSum="3"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:paddingTop="4dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/car_name"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:paddingRight="8dp"
                            android:paddingEnd="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:id="@+id/car_name_details_fragment"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:paddingTop="4dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/driver_name"
                            android:textSize="16dp"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:paddingRight="8dp"
                            android:paddingEnd="8dp" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:id="@+id/driver_name_details_fragment"
                            android:textSize="16dp"
                            android:textColor="#fff"
                            android:gravity="center"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:paddingTop="4dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="@string/date"
                            android:textSize="16dp"
                            android:paddingRight="8dp"
                            android:textColor="#000"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:paddingEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:id="@+id/date_details_fragment"
                            android:textSize="16dp"
                            android:gravity="center"
                            android:textColor="#fff"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:id="@+id/coast_container"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:paddingTop="4dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="@string/collection"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="16dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".5"
                        android:id="@+id/cost_details_fragment"
                        android:textSize="16dp"
                        android:gravity="top|center_horizontal"
                        android:paddingTop="4dp"
                        android:textColor="#fff"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>